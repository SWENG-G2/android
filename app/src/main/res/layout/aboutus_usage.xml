<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutus_view_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSecondary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/creatorsTitle"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/how_to_use_the_app"
            android:textColor="?attr/colorOnSecondary" />

    </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="389dp"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenshot_image_main"
                    android:layout_width="399dp"
                    android:layout_height="549dp"

                    android:src="@drawable/main_empty" />

                <TextView
                    android:id="@+id/screenshot_text_main"
                    android:layout_width="337dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Tap the button to start the app" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenshot_image_campus"
                    android:layout_width="384dp"
                    android:layout_height="549dp"
                    android:src="@drawable/campus" />

                <TextView
                    android:id="@+id/screenshot_text_campus"
                    android:layout_width="337dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:text="Tap the button to start the app" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenshot_image_bird"
                    android:layout_width="384dp"
                    android:layout_height="549dp"
                    android:src="@drawable/main" />

                <TextView
                    android:id="@+id/screenshot_text_bird"
                    android:layout_width="337dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:text="Tap the button to start the app" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenshot_image_info1"
                    android:layout_width="384dp"
                    android:layout_height="549dp"
                    android:src="@drawable/detail" />

                <TextView
                    android:id="@+id/screenshot_text_info1"
                    android:layout_width="337dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:text="Tap the button to start the app" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenshot_image_info2"
                    android:layout_width="384dp"
                    android:layout_height="549dp"
                    android:src="@drawable/detail1" />

                <TextView
                    android:id="@+id/screenshot_text_info2"
                    android:layout_width="337dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:text="Tap the button to start the app" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenshot_image_info3"
                    android:layout_width="384dp"
                    android:layout_height="549dp"
                    android:src="@drawable/detail2" />

                <TextView
                    android:id="@+id/screenshot_info3"
                    android:layout_width="337dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:text="Tap the button to start the app" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

                <ImageView
                    android:id="@+id/screenshot_image2"
                    android:layout_width="384dp"
                    android:layout_height="549dp"
                    android:src="@drawable/detail3" />

                <TextView
                    android:id="@+id/screenshot_text2"
                    android:layout_width="337dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:text="Tap the button to start the app" />


            </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>